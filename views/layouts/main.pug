doctype html
html.h-100(lang='ru')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		title= `Менеджер задач: ${pageTitle}`
		script(src='/assets/main.js')
	body.h-100
		.page-wrapper.d-flex.flex-column.h-100
			header
				nav.navbar.navbar-expand-md.navbar-dark.bg-dark
					a.navbar-brand.mb-0.mr-md-5.h1.font-weight-bold(href=getNamedURL('root')) Менеджер задач
					button.navbar-toggler.ml-auto(
						type="button"
						data-toggle="collapse"
						data-target="#navbarToggler"
						aria-controls="navbarToggler"
						aria-expanded="false"
						aria-label="Toggle navigation"
					): span.navbar-toggler-icon
					#navbarToggler.collapse.navbar-collapse
						.navbar-nav
							- const attr = { class: !currentUser ? 'disabled' : null, href: currentUser ? getNamedURL('userProfile', { userId: currentUser.id }) : null }
							a.nav-item.nav-link.mx-auto.mx-md-0&attributes(attr) Мои настройки
							a.nav-item.nav-link.mx-auto.mx-md-0(href=getNamedURL('allUsers')) Пользователи
						if currentUser
							form.form-inline.flex-column.flex-md-row.ml-md-auto(action=getNamedURL('session', { query: { _method: 'delete' } }), method='post')
								button.btn.btn-outline-success(type='submit') Выйти
						else
							form.form-inline.flex-column.flex-md-row.ml-md-auto
								a.btn.btn-outline-success.mb-2.mb-md-0(href=getNamedURL('newSession'), role='button') Войти
								a.btn.btn-outline-success.ml-md-2(href=getNamedURL('newUser'), role='button') Регистрация
			main
				.container
					if flash.message
						.alert.alert-success.text-center.mb-0.mt-3(role='alert')= flash.message
					block content
			footer.mb-3.mt-auto
				.container
					hr
					.d-flex.justify-content-between.footer-container
						.contacts E-mail: 8ar8az@gmail.com
						.copyright
							span.font-italic &copy; 8ar8az, 2018
							
		